{
  "Description": "Cloud Formation Template to launch a new PyGliden Logging Bucket",
  "Parameters": {
    "BucketName": {
      "Description": "Bucket Name",
      "Type": "String"
    },
    "Email" : {
      "Type" : "String",
      "Description" : "Email address to notify when an API activity has triggered an alarm"
    }
  },
  "Resources": {
    "LoggingUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
      }
    },
    "LoggingUserAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {"Ref": "LoggingUser"}
      }
    },
    "LoggingBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {"Ref": "BucketName"},
        "LifecycleConfiguration": {
          "Rules": [
            {
              "Id": "DeleteEverythingInThreeMonths",
              "Prefix": "",
              "Status": "Enabled",
              "ExpirationInDays": "90"
            }
          ]
        }
      }
    },
    "LoggingBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {"Ref": "LoggingBucket"},
        "PolicyDocument": {
          "Statement": [
            {
              "Action":["s3:GetObject"],
	            "Effect":"Allow",
	            "Resource": {"Fn::Join" : ["", ["arn:aws:s3:::", {"Ref" : "LoggingBucket"}, "/*" ]]},
	            "Principal": {
                "AWS": {"Fn::GetAtt" : [ "LoggingUser" , "Arn" ]}
              }
            },
            {
              "Action":["s3:ListBucket"],
              "Effect":"Allow",
              "Resource": {"Fn::Join" : ["", ["arn:aws:s3:::", {"Ref" : "LoggingBucket"} ]]},
              "Principal": {
                "AWS": {"Fn::GetAtt" : [ "LoggingUser" , "Arn" ]}
              }
            },
            {
              "Action":["s3:GetBucketLocation"],
              "Effect":"Allow",
              "Resource": {"Fn::Join" : ["", ["arn:aws:s3:::", {"Ref" : "LoggingBucket"} ]]},
              "Principal": {
                "AWS": {"Fn::GetAtt" : [ "LoggingUser" , "Arn" ]}
              }
            },
            {
              "Action":["s3:PutObject"],
              "Effect":"Allow",
              "Resource": {"Fn::Join" : ["", ["arn:aws:s3:::", {"Ref" : "LoggingBucket"}, "/*" ]]},
              "Principal": {
                "AWS": {"Fn::GetAtt" : [ "LoggingUser" , "Arn" ]}
              }
            }
          ]
        }
      }
    },
    "BucketSizeCloudWatchAlarm": {
      "Type" : "AWS::CloudWatch::Alarm",
      "Properties" : {
        "AlarmActions" : [ { "Ref": "AlarmNotificationTopic" } ],
        "AlarmDescription" : {"Fn::Join": ["-", [{ "Ref": "BucketName"}, "SizeAlarm"]]},
        "AlarmName" : {"Fn::Join": ["-", [{ "Ref": "BucketName"}, "SizeAlarm"]]},
        "ComparisonOperator" : "GreaterThanOrEqualToThreshold",
        "EvaluationPeriods" : 1,
        "MetricName" : "BucketSizeBytes",
        "Dimensions": [
          {
            "Name":"BucketName",
            "Value": { "Ref": "BucketName" }
          }
        ],
        "Namespace" : "AWS/S3",
        "Period" : 60,
        "Statistic" : "Average",
        "Threshold" : 10737418240,
        "Unit" : "Bytes"
      }
    },
    "AlarmNotificationTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "Subscription": [
          {
            "Endpoint": { "Ref": "Email" },
            "Protocol": "email"
          }
        ]
      }
    }
  },
  "Outputs": {
    "AccessKeyId": {
      "Description": "Access Key Id for Bucket User",
      "Value": {"Ref": "LoggingUserAccessKey"}
    },
    "SecretAccessKey": {
      "Description": "Secrety Access Key for Bucket User",
      "Value": {"Fn::GetAtt" : [ "LoggingUserAccessKey" , "SecretAccessKey" ]}
    }
  }
}
