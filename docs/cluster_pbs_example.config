[Mode]
debug = False

[Glidein]
address = http://glidein-simprod.icecube.wisc.edu:11001/jsonrpc
ssh_state = True
delay = -1
loc = $HOME/glidein
cmd = /usr/bin/python /home/briedel/glidein/submit_pbs_glidein.py
tarball = glidein.tar.gz
executable = glidein_start.sh

[Cluster]
user = briedel
os = RHEL6
scheduler = PBS
submit_command = qsub
max_total_jobs = 1500
limit_per_submit = 150
mem_per_core = 2700
max_disk = 300000
walltime_hrs = 14
cpus = 1
gpus = 1
cvmfs = True
gpu_only = False
running_cmd = qstat -u briedel|grep briedel|grep -v C|wc|awk '{print $1}'
# Special note for PBS: 
# The option `group_jobs` cannot be used with PBS.
# gridftp does not like the name of the temporary
# directories generated by PBS. The name has a
# `[]` in it, which gridftp takes offense to. 

[SubmitFile]
filename = submit.pbs
local_dir = $LSCRATCH
custom_header = #PBS -A ngw-282-ac
