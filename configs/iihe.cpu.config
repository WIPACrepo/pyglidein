[Mode]
debug = True

[Glidein]
site = IIHE
address = http://glidein-simprod.icecube.wisc.edu:11001/jsonrpc
delay = 600
loc = $HOME/pyglidein
#tarball = $HOME/pyglidein/glidein.tar.gz
executable = glidein_start.sh

[Cluster]
user = $USER
os = RHEL6
scheduler = PBS
submit_command = qsub
max_total_jobs = 500
limit_per_submit = 50
cvmfs = True
mem_per_core = 4001
walltime_hrs = 15
gpu_only = False
cpu_only = True
running_cmd = qstat -u $USER|grep glidein.cpu|wc -l

[Queues]
2000 = lowmem
3000 = standard
4000 = highmem

[SubmitFile]
filename = glidein.cpu.pbs
local_dir = $TMPDIR
mem_safety_scale = 0.952380952
